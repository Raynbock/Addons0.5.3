<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Script file="ModelBrowser_Data.lua"/>
    <Script file="ModelBrowser_TextureData.lua"/>
    <Script file="ModelBrowser.lua"/>

    <Frame name="ModelBrowserFrame" parent="UIParent" inherits="DialogBoxFrame" hidden="true">
        <Size>
            <AbsDimension x="500" y="460"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Scripts>
            <OnLoad>
                ModelBrowser_OnLoad();
            </OnLoad>
            <OnShow>
                ModelBrowser_OnShow();
            </OnShow>
            <OnHide>
                ModelBrowser_OnHide();
            </OnHide>
        </Scripts>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="ModelBrowserTitleText" inherits="GameFontNormal" text="Model Browser">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-16"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>

                <FontString name="ModelBrowserInfoText" inherits="GameFontNormalSmall" text="">
                    <Size>
                        <AbsDimension x="460" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="70"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>

                <FontString name="ModelBrowserStatusText" inherits="GameFontNormalSmall" text="0 / 0">
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="52"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <!-- Close button -->
            <Button name="ModelBrowserCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-4" y="-4"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowserFrame:Hide();
                    </OnClick>
                </Scripts>
            </Button>

            <!-- Texture dropdown (per-model textures) -->
            <Button name="ModelBrowserTextureDropDown" inherits="UIDropDownMenuTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="20" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        ModelBrowserTextureDropDown_OnLoad();
                    </OnLoad>
                </Scripts>
            </Button>

            <!-- Category dropdown -->

            <Button name="ModelBrowserCategoryDropDown" inherits="UIDropDownMenuTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="20" y="-50"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        ModelBrowserCategoryDropDown_OnLoad();
                    </OnLoad>
                </Scripts>
            </Button>

            <!-- Search box -->
            <EditBox name="ModelBrowserFilterBox" autoFocus="false" letters="64">
                <Size>
                    <AbsDimension x="200" y="18"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-40" y="-50"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
                            <Size>
                                <AbsDimension x="128" y="32"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                        <Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
                            <Size>
                                <AbsDimension x="128" y="32"/>
                            </Size>
                            <Anchors>
                                <Anchor point="RIGHT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <FontString inherits="ChatFontNormal"/>
                <Scripts>
                    <OnTextChanged>
                        ModelBrowserFilterBox_OnTextChanged();
                    </OnTextChanged>
                    <OnEnterPressed>
                        ModelBrowserFilterBox_OnEnterPressed();
                    </OnEnterPressed>
                    <OnEscapePressed>
                        ModelBrowserFilterBox_OnEscapePressed();
                    </OnEscapePressed>
                </Scripts>
            </EditBox>

            <!-- 3D Model -->
            <PlayerModel name="ModelBrowserModel">
                <Size>
                    <AbsDimension x="260" y="260"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER">
                        <Offset>
                            <AbsDimension x="0" y="-10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </PlayerModel>

            <!-- Prev / Next page buttons -->
            <Button name="ModelBrowserPrevButton">
                <Size>
                    <AbsDimension x="32" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="40" y="40"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_Prev();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Up"/>
                <PushedTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Down"/>
                <DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-PrevPage-Disabled"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>

            <Button name="ModelBrowserNextButton">
                <Size>
                    <AbsDimension x="32" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="-40" y="40"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_Next();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
                <PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
                <DisabledTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Disabled"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>

            <!-- Rotate left/right -->
            <Button name="ModelBrowserRotateLeftButton">
                <Size>
                    <AbsDimension x="24" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-40" y="40"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_RotateLeft();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-RotationLeft-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-RotationLeft-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>

            <Button name="ModelBrowserRotateRightButton">
                <Size>
                    <AbsDimension x="24" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="40" y="40"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_RotateRight();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-RotationRight-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-RotationRight-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
            </Button>

            <!-- Zoom in/out -->
            <Button name="ModelBrowserZoomInButton">
                <Size>
                    <AbsDimension x="80" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="80" y="10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_ZoomIn();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD"/>
                <ButtonText text="Zoom In"/>
            </Button>

            <Button name="ModelBrowserZoomOutButton">
                <Size>
                    <AbsDimension x="80" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM">
                        <Offset>
                            <AbsDimension x="-80" y="10"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        ModelBrowser_ZoomOut();
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up"/>
                <PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD"/>
                <ButtonText text="Zoom Out"/>
            </Button>
        </Frames>
    </Frame>
</Ui>
