<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <!-- Data and logic -->
    <Script file="AtlasAlpha_Data.lua"/>
    <Script file="AtlasAlpha.lua"/>

    <!-- Main Atlas frame -->
    <Frame name="AtlasAlphaFrame" toplevel="true" parent="UIParent" inherits="DialogBoxFrame" hidden="true">
        <Size>
            <AbsDimension x="512" y="512"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Frames>
            <!-- Close button in the top-right -->
            <Button name="AtlasAlphaCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="AtlasAlphaFrame" relativePoint="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-5" y="-5"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>

            <!-- Title -->
            <Frame name="AtlasAlphaTitleFrame">
                <Size>
                    <AbsDimension x="300" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOP">
                        <Offset>
                            <AbsDimension x="0" y="-16"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="AtlasAlphaTitleText" inherits="GameFontHighlightLarge" justifyH="CENTER">
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Instance dropdown -->
            <Frame name="AtlasAlphaInstanceDropDown" inherits="UIDropDownMenuTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="AtlasAlphaFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="24" y="-40"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        AtlasAlpha_InstanceDropDown_OnLoad();
                    </OnLoad>
                </Scripts>
            </Frame>

            <!-- Boss dropdown -->
            <Frame name="AtlasAlphaBossDropDown" inherits="UIDropDownMenuTemplate" id="2">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="AtlasAlphaFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="24" y="-72"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        AtlasAlpha_BossDropDown_OnLoad();
                    </OnLoad>
                </Scripts>
            </Frame>

            <!-- Map area on the left -->
            <Frame name="AtlasAlphaMapFrame">
                <Size>
                    <AbsDimension x="320" y="384"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="AtlasAlphaFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="24" y="-110"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <!-- The map texture will be set by Lua -->
                        <Texture name="AtlasAlphaMap" setAllPoints="true"/>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Info area (location, level range, boss) on the right -->
            <Frame name="AtlasAlphaInfoFrame">
                <Size>
                    <AbsDimension x="140" y="384"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="AtlasAlphaFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="360" y="-110"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="AtlasAlphaInfoText" inherits="GameFontNormalSmall" justifyH="LEFT">
                            <!-- Reserve top 140px for text; loot icons go below -->
                            <Size>
                                <AbsDimension x="140" y="140"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Loot icon grid below the info text -->
            <Frame name="AtlasAlphaLootFrame">
                <Size>
                    <AbsDimension x="140" y="240"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="AtlasAlphaInfoFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <!-- 150px down from top of info frame -->
                            <AbsDimension x="0" y="-150"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Frames>
                    <!-- 8 loot buttons in a 4x2 grid -->
                    <Button name="AtlasAlphaLootButton1" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton2" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton1" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton3" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton1" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-4"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton4" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton3" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton5" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton3" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-4"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton6" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton5" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton7" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton5" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-4"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                    <Button name="AtlasAlphaLootButton8" inherits="ItemButtonTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="AtlasAlphaLootButton7" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnEnter>AtlasAlpha_LootButton_OnEnter();</OnEnter>
                            <OnLeave>AtlasAlpha_LootButton_OnLeave();</OnLeave>
                            <OnClick>AtlasAlpha_LootButton_OnClick();</OnClick>
                        </Scripts>
                    </Button>

                </Frames>
            </Frame>

        </Frames>

        <Scripts>
            <OnLoad>
                AtlasAlpha_OnLoad();
            </OnLoad>
            <OnShow>
                AtlasAlpha_OnShow();
            </OnShow>
        </Scripts>
    </Frame>

</Ui>
